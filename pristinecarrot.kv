#kivy 1.9
#:import cwd os.getcwd
#:import cfg config.get_config
#:import batches config.get_import_file_names

Root:
    size_hint: 1.0, 1.0
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        text: 'Item Editor'
        Label:
            text: 'First tab content area'
    TabbedPanelItem:
        text: 'Tile Triage'
        RelativeLayout:
            RelativeLayout:
                size_hint: 1, 0.067
                pos_hint: {"x": 0, "y": .92 }
                Label:
                    pos_hint: {"x": 0 }
                    size_hint: .083, 1
                    text: '[b]TileID:[/b]'
                    markup: True
                Label:
                    pos_hint: {"x": 0.083 }
                    size_hint: .083, 1
                    text: 'NA'
                Label:
                    pos_hint: {"x": 0.166 }
                    size_hint: .083, 1
                    text: '[b]ObjectID:[/b]'
                    markup: True
                Label:
                    pos_hint: {"x": 0.249 }
                    size_hint: .083, 1
                    text: 'NA'
                Spinner:
                    id: triage_batch_spinner
                    pos_hint: {"x": 0.338 }
                    size_hint: .247, 1
                    text: '(select batch)'
                    values: batches()
                Label:
                    pos_hint: {"x": 0.593 }
                    size_hint: .083, 1
                    text: '[b]Hide:[/b]'
                    markup: True
                CheckBox:
                    pos_hint: {"x": 0.664 }
                    size_hint: .04, 1
                    active: True
                Label:
                    pos_hint: {"x": 0.712 }
                    size_hint: .083, 1
                    text: 'Committed'
                CheckBox:
                    pos_hint: {"x": 0.815 }
                    size_hint: .040, 1
                    active: True
                Label:
                    pos_hint: {"x": 0.860 }
                    size_hint: .083, 1
                    text: 'Discarded'
            BoxLayout:
                size_hint: .900, .200
                pos_hint: {"x": .050, "y": .033 }
                BoxLayout:
                    orientation: "vertical"
                    Button:
                        text: 'Resize'
                    Button:
                        text: 'Attach'
                    Button:
                        text: 'Detach All'
                BoxLayout:
                    orientation: "vertical"
                    Button:
                        text: 'Commit'
                    Button:
                        text: 'Discard'
                    Button:
                        text: 'Re-triage'
                Image:
                    source: 'nav-keys.png'
    TabbedPanelItem:
        id: spritemaps_tab
        text: 'Spritemaps'
        RelativeLayout:
            id: loaded_spritemap
            BoxLayout:
                id: props
                size_hint: .95, 0.9
                pos_hint: {"x": 0, "y": .1 }
                orientation: "vertical"
                RelativeLayout:
                    Label:
                        pos_hint: {"x": 0, "y": .5 }
                        size_hint: .5, 0.4
                        text: 'X-axis tile size (px):'
                    TextInput:
                        id: x_px_size
                        pos_hint: {"x": .5, "y": .5 }
                        size_hint: .1, 0.4
                        text: cfg('default_x_pixels', 'image')
                RelativeLayout:
                    Label:
                        pos_hint: {"x": 0, "y": .5 }
                        size_hint: .5, 0.4
                        text: 'Y-axis tile size (px):'
                    TextInput:
                        id: y_px_size
                        pos_hint: {"x": .5, "y": .5 }
                        size_hint: .1, 0.4
                        text: cfg('default_y_pixels', 'image')
                RelativeLayout:
                    Label:
                        pos_hint: {"x": 0, "y": .5 }
                        size_hint: .5, 0.4
                        text: 'Path:'
                    Label:
                        id: path
                        pos_hint: {"x": .5, "y": .5 }
                        text_size: self.size
                RelativeLayout:
                    Label:
                        pos_hint: {"x": 0, "y": .5 }
                        size_hint: .5, 0.4
                        text: 'X-axis size (tiles):'
                    Label:
                        id: x_tile_size
                        halign: 'left'
                        pos_hint: {"x": .5, "y": .5 }
                        size_hint: .5, 0.4
                        text_size: self.size
                RelativeLayout:
                    Label:
                        pos_hint: {"x": 0, "y": .5 }
                        size_hint: .5, 0.4
                        text: 'Y-axis size (tiles):'
                    Label:
                        id: y_tile_size
                        pos_hint: {"x": .5, "y": .5 }
                        size_hint: .5, 0.4
                        text_size: self.size
                RelativeLayout:
                    Label:
                        pos_hint: {"x": 0, "y": .5 }
                        size_hint: .5, 0.4
                        text: 'Image Color Mode:'
                    Label:
                        id: image_mode
                        pos_hint: {"x": .5, "y": .5 }
                        size_hint: .5, 0.4
                        text_size: self.size
            Button:
                text: 'Compile'
                size_hint: 0.3, 0.1
                pos_hint: {"x": 0, "y": 0}
            Button:
                id: import_button
                text: 'Split and Import'
                disabled: True
                pos_hint: {"x": 0.3, "y": 0}
                size_hint: 0.4, 0.1
                on_release: root.split_and_import()
            Button:
                text: 'Load'
                size_hint: 0.3, 0.1
                pos_hint: {"x": 0.7, "y": 0}
                on_release: root.show_load()
    TabbedPanelItem:
        text: 'Config'
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Reset Database'
                size_hint: 0.3, 0.1
                on_release: root.reset_db()
            Button:
                text: 'Reset Processed and Archive'
                size_hint: 0.3, 0.1
                on_release: root.reset_processed_folder()


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: cwd()

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)


<InfoDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            text: root.message
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Okay"
                on_release: root.okay()


<InputDialog>:
    RelativeLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        Label:
            text: root.message
            size_hint: .8, 0.12
            pos_hint: {"x": .1, "y": .2 }
        TextInput:
            id: user_input
            text: root.user_input
            size_hint: .8, 0.12
            pos_hint: {"x": .1, "y": .4 }
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Okay"
                on_release: root.okay()