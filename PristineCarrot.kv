#kivy 1.9
#:import cwd os.getcwd

Root:
    size_hint: 1.0, 1.0
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False

    TabbedPanelItem:
        text: 'Item Editor'
        Label:
            text: 'First tab content area'
    TabbedPanelItem:
        text: 'Tile Triage'
        BoxLayout:
            Label:
                text: 'Second tab content area'
            Button:
                text: 'Button that does nothing'
    TabbedPanelItem:
        id: 'spritemaps_tab'
        text: 'Spritemaps'
        RelativeLayout:
            id: 'loaded_spritemap'
            BoxLayout:
                id: 'props'
                size_hint: .95, 0.9
                pos_hint: {"x": 0, "y": .1 }
                orientation: "vertical"
                BoxLayout:
                    id: 'x_px_size'
                    orientation: "horizontal"
                    Label:
                        text: 'X-axis size (px):'
                    TextInput:
                        id: 'val'
                        size_hint: .9, 0.4
                BoxLayout:
                    id: 'y_px_size'
                    orientation: "horizontal"
                    Label:
                        text: 'Y-axis size (px):'
                    TextInput:
                        size_hint: .9, 0.4
                BoxLayout:
                    id: 'path'
                    orientation: "horizontal"
                    Label:
                        text: 'Path:'
                    Label:
                        size_hint: .9, 0.4
                BoxLayout:
                    id: 'x_tile_size'
                    orientation: "horizontal"
                    Label:
                        text: 'X-axis size (tiles):'
                    Label:
                        size_hint: .9, 0.4
                BoxLayout:
                    id: 'y_tile_size'
                    orientation: "horizontal"
                    Label:
                        text: 'Y-axis size (tiles):'
                    Label:
                        size_hint: .9, 0.4
                BoxLayout:
                    id: 'image_mode'
                    orientation: "horizontal"
                    Label:
                        text: 'Image Color Mode'
                    Label:
                        size_hint: .9, 0.4
            Button:
                text: 'Compile'
                size_hint: 0.3, 0.1
                pos_hint: {"x": 0, "y": 0}
            Button:
                text: 'Split and Import'
                disabled: True
                pos_hint: {"x": 0.3, "y": 0}
                size_hint: 0.4, 0.1
            Button:
                text: 'Load'
                size_hint: 0.3, 0.1
                pos_hint: {"x": 0.7, "y": 0}
                on_release: root.show_load()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: cwd()

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
